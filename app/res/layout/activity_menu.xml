<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_menu"
        android:textSize="40sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"/>

    <!--This is the button that will send the user to the greetApp-->
    <Button
        android:id="@+id/GreetApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GreetApp" />

    <!--This is the button that will send the user to the IMC App.-->
    <Button
        android:id="@+id/btnIMCApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC App" />

    <!--This is the button that will send the user to the TODO App-->
    <Button
        android:id="@+id/btnTODO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TODO App"/>

    <!--This is the button that will send the user to the SuperHero App-->
    <Button
        android:id="@+id/btnSuperHero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SuperHero App"/>

    <!--This is the button that will sebd the user to the SuperHero App-->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"/>

</LinearLayout>